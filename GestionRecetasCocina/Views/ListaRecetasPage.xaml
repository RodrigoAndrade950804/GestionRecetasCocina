<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionRecetasCocina.Views.ListaRecetasPage"
             Title="Recetas Guardadas">

    <CollectionView ItemsSource="{Binding Recetas}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border BackgroundColor="#f0f0f0" Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 5" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" />
                        <Label Text="{Binding Ingredientes}" FontSize="14" />
                        <Label Text="{Binding TiempoPreparacionMinutos, StringFormat='Tiempo: {0} min'}" />
                        <Label Text="{Binding EsVegetariana, StringFormat='Vegetariana: {0}'}" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>